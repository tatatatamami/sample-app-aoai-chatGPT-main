# Azure AI Foundry Configuration
Foundry__Enabled=true
Foundry__Project=your-project-id
Foundry__Application=your-app-id
Foundry__Endpoint=https://your-foundry-endpoint
Foundry__UseAzureIdentity=true
Foundry__ApiVersion=2025-11-15-preview
Foundry__ResponseTimeout=30

# Alternative: Use Bearer Token instead of Azure Identity
# Foundry__UseAzureIdentity=false
# Foundry__BearerToken=your-bearer-token-here

# Azure Identity Configuration (for UseAzureIdentity=true)
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret

# Logging Configuration
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning
Logging__LogLevel__FoundryChat=Debug
